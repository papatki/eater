<% include ../partials/header %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
           <h1>Edit <%= restaurant.name %></h1>
        </div>
        
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/restaurants/<%= restaurant._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[name]" value="<%= restaurant.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" id="location" value="<%= restaurant.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[image]" value="<%= restaurant.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[openingHours]" value="<%= restaurant.openingHours %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[tags]" value="<%= restaurant.tags %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurant[description]" value="<%= restaurant.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-light btn-block">Submit!</button>
                </div>
        </form>
        </div>
    </div>
       
</div>

<% include ../partials/footer %>