<% include ../partials/header %>

<body class="text-center">
    <form class="form-signin" action="/users/<%= currentUser._id %>/?_method=PUT" method="POST">
      <h1 class="h3 mb-3 font-weight-normal">Update profile</h1>
      <label for="inputUsername" class="sr-only">Username</label>
      <input type="text" id="inputUsername" class="form-control" name="user[username]" value="<%= currentUser.username %>">
      
      <label for="inputFirstName" class="sr-only">First Name</label>
      <input type="text" id="inputFirstName" class="form-control" name="user[firstName]" value="<%= currentUser.firstName %>">
      
      <label for="inputLastName" class="sr-only">Last Name</label>
      <input type="text" id="inputLastName" class="form-control" name="user[lastName]" value="<%= currentUser.lastName %>">
      
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" id="inputEmail" class="form-control" name="user[email]" value="<%= currentUser.email %>">
      
      <label for="inputAvatar" class="sr-only">Avatar</label>
      <input type="text" id="inputAvatar" class="form-control" name="user[avatar]" value="<%= currentUser.avatar %>">
      
      <button class="btn btn-lg btn-light btn-block" type="submit">Update!</button>

    </form>
</body>


<% include ../partials/footer %>