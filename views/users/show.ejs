<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-4 text-center">
			<h1><%= user.firstName + " " + user.lastName %></h1>
			<div class="card">
				<img class="card-img-top" src="<%= user.avatar %>" alt="user profile image">
				<div class="card-body">
					<h4><a href="mailto:<%= user.email %>"><%= user.email %></a></h4>
				</div>
			</div>
			<% if(currentUser && user._id.equals(currentUser._id)) { %>
                <a class="btn btn-primary btn-sm" href="/users/<%= user._id %>/edit" >Edit profile</a>
            <% } %>
		</div>
		<div class="col-md-8">
			<h3><%= user.username %>'s restaurants:</h3>
			<ul>
				<% restaurants.forEach(function(restaurant) { %>
				<li><a href="/restaurants/<%= restaurant.id %>"><%= restaurant.name %></a></li>
				<% }); %>
			</ul>
		</div>
	</div>
</div>


<% include ../partials/footer %>